{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "lib": ["DOM", "ES2017"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["src/setupTests.ts", "src/**/__test__/*.test.tsx"]
}
